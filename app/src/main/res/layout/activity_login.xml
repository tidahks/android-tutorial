<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_activity">

    <EditText
        android:id="@+id/id__text"
        android:layout_width="400dp"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="4dp" />

    <EditText
        android:id="@+id/password__text"
        android:layout_width="408dp"
        android:layout_height="76dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@+id/id__text"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/login__button"
        android:layout_width="384dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="로그인"
        app:layout_constraintTop_toBottomOf="@+id/password__text"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/register__button"
        android:layout_width="316dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="회원가입"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintTop_toBottomOf="@+id/login__button"
        tools:layout_editor_absoluteX="47dp" />
</androidx.constraintlayout.widget.ConstraintLayout>